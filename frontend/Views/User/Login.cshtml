@{
    ViewBag.Title = "Login";
}
@model Users

<form asp-action="Login" class="border contactForm">
    <h1 class="headerText">Log in</h1>

    <div class="form-group row">
        <input asp-for="Email" placeholder="Email" />
    </div>
    <div class="row">
        <span>@Html.ValidationMessageFor(u => u.Email)</span>
    </div>

    <div class="form-group row PassWord">
        <input asp-for="Password" placeholder="Password" type="password" id="PassWord" />
        <i class="fa-sharp fa-solid fa-eye" id="PassWordIcon"></i>
    </div>

    <div class="row">
        <span></span>
        <span>@Html.ValidationMessageFor(u => u.Password)</span>
    </div> <br />

    <h6 style="color:red">@Html.Raw(@ViewBag.Message)</h6>

    <button type="submit" class="contactButton">LOG IN</button><br /><br />

    <h6>If you dont have an account, <a asp-controller="NewUser" asp-action="Create">Register Here</a></h6>
</form>
