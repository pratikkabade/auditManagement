@{
    ViewBag.Title = "Register";
}
@model Users


<form asp-action="Create" asp-controller="NewUser" method="post" class="contactForm">
    <h1 class="headerText">Register</h1>
    <fieldset>
        <div class="row">
            <input asp-for="FirstName" placeholder="FirstName" />
        </div>
        <div class="row">
            <input asp-for="LastName" placeholder="LastName" />
        </div>
        <div class="row">
            <input asp-for="Email" placeholder="Email" />
        </div>
        <div class="form-group row PassWord">
            <input asp-for="Password" placeholder="Password" type="password" id="PassWord" />
            <i class="fa-sharp fa-solid fa-eye" id="PassWordIcon"></i>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </fieldset>
    <h6 style="color:red">@Html.Raw(@ViewBag.Message)</h6>

</form>